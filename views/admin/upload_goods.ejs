        height: 25px;
        line-height: 22px;
        border: 1px solid #8797b0;
        background-color: #fff;
    }

    .drop-down-default {
        display: block;
        position: absolute;
        right: 1px;
        top: 0px;
        height: 25px;
        border-left: 1px solid #b9cbe7;
        cursor: pointer;
    }

    .greay-cat-box {
        border: 1px solid #f3f3f3;
    }

    .greay-cat-box .b-f-line {
