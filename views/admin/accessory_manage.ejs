<script src="/js/md5.js"></script>
<script type="text/javascript">
    var count_three = 0;
    var count_two = 0;
    var count_threes = 0;
    var count = 0;
    var deleteId = 0;
    var CategoryALL = [];

    function toggle(param) {
        if (param == 'off') {
            $('.fa-toggle-off').show();
            $('.fa-caret-right').hide();
            $('.fa-caret-down').show();
            $('.fa-toggle-on').hide();
            $('table').find('tr').not('.0_').show();
        } else {
            $('.fa-caret-right').show();
            $('.fa-caret-down').hide();
            $('.fa-toggle-off').hide();
            $('.fa-toggle-on').show();
            $('table').find('tr').not('.0_').hide();
            $('table tr[class=head_table]').show();

        }
    }

    function saveAll() {
        var FirstCategory = $('table tr[class*=0_]').find('input').val();
        for (var i = 1; i <= $('table tr[class*=cateGory]').length; i++) {
            var n = i + '_';
            CategoryALL.push(getCategory(n))
        }

        var timeStamps = (new Date().getTime() / 1000).toFixed();
        var Category = {
            firstCategory: FirstCategory,
            firstTimeStamp: timeStamps,
            firstUrl: FirstCategory + '_' + timeStamps,
            firstCount: 0,
            secondCategory: JSON.stringify(CategoryALL)
        }

        console.log(Category)
        $.ajax({
            url: 'doAddCategory',
            type: 'POST',
            data: Category,
            dataType: "json",
            traditional: true,
            success: function (result) {
                if (result == 'success') {
                    layer.msg('添加成功');
                } else if (result == 'failed') {
                    layer.alert('添加失败，请检查是否有非法词汇！');
                }
            }, error: function (err) {
                if (err.status == 200) {
                    layer.msg('添加成功');
                    location.reload();
                } else {
                    layer.alert('添加失败，请检查是否有非法词汇！');
                }

            }
        });

        CategoryALL = [];
    }

    function getCategory(param) {
        var twoArray = [];
        var threeArray = [];
        $('table tr[class*=' + param + ']').each(function () {
            twoArray.push($(this).find('input').val())
        })
        twoArray.forEach(function (value, index) {
            if (index > 0 && index < twoArray.length - 1) {
                var timeStamp = (new Date().getTime() / 1000).toFixed();
                var third = {
                    thirdTimeStamp: timeStamp,
                    thirdUrl: value + '_' + timeStamp,
                    thirdTitle: value
                }
                threeArray.push(third);
            }
        })

        var second_Category = twoArray[0];
        var three_Category = threeArray;
        var timeStamps = (new Date().getTime() / 1000).toFixed();
        var totalGate = {
            secondTitle: second_Category,
            secondTimeStamp: timeStamps,
            secondUrl: second_Category + '_' + timeStamps,
            secondCount: 0,
            thirdTitles: three_Category
        }

        return totalGate;
    }

    function addThree() {
        count_three++;
        var section = document.createElement('input');
        section.placeholder = '三级类目';
        section.className = 'three_' + count_three.toString();
        document.getElementsByClassName('three')[0].appendChild(section);
    }

    function addThreeUnique(count_two, count_threes) {
        var newSeq = count_two;
        var Three = count_threes;
        console.log(count_two)
        console.log(count_threes)
        Three++;
        var section = document.createElement('input');
        section.placeholder = '三级类目';
        section.className = 'two_' + count_two + Three;
        document.getElementsByClassName('three')[newSeq].appendChild(section);
    }

    function addTwo() {
        count_two++;
        count_threes++;
        var div_head = document.createElement('div');
        div_head.className = "col-sm-9 two";
        var input = document.createElement('input');
        input.placeholder = "二级类目";
        input.className = 'two_' + count_two.toString();
        div_head.appendChild(input);

        var div_head_two = document.createElement('div');
        div_head_two.className = "col-sm-9" + " " + 'two_' + count_two.toString();
        var input_three = document.createElement('input');
        input_three.placeholder = "三级类目";
        input_three.className = 'two_' + count_two.toString() + '_' + count_threes.toString();
        div_head_two.appendChild(input_three);

        document.getElementsByClassName('total')[0].appendChild(div_head);
        document.getElementsByClassName('total')[0].appendChild(div_head_two);

        var div_head_two_img = document.createElement('div');
        div_head_two_img.className = "col-sm-3";
        var img = document.createElement('img');
        img.className = count_two.toString();
        img.src = "/images/add.svg";

        img.onclick = function () {
            console.log(count_two)
            console.log(count_threes)
            count_threes++;
            var section = document.createElement('input');
            section.placeholder = '三级类目';
            section.className = 'two_' + count_two.toString() + '_' + count_threes.toString();
            document.getElementsByClassName('two_' + count_two)[count_threes].appendChild(section);
        };

        var t = document.createTextNode("添加三级类目");
        div_head_two_img.appendChild(img);
        div_head_two_img.appendChild(t);


        document.getElementsByClassName('total')[0].appendChild(div_head_two_img);

    }

    function add(currentRowID) {
        //遍历每一行，找到指定id的行的位置i,然后在该行后添加新行
        $.each($('table:first tbody tr'), function (i, tr) {

            var newCurrentRowID = currentRowID + '_' + " " + 'cateGory';
            var tr_new = currentRowID + '_';
            if ($(this).attr('class') == newCurrentRowID) {
                if ($('table tr[class*=' + tr_new + ']').find('input').val() == "") {
                    layer.msg('请添加二级分类');
                } else {
                    deleteId++;
                    //获取当前行
                    var currentRow = $('table:first tbody tr:eq(' + i + ')');
                    //获取当前时间
                    var now = new Date();
                    var date = now.getFullYear() + '-' + now.getMonth() + '-' + now.getDate();
                    //要添加的行的id
                    var addRowID = currentRowID + '_' + deleteId;
                    var str = '<tr class="' + addRowID + '"><td><img  style="margin-left: 40px" src="/images/jiao.svg" alt="">&nbsp;<input type="text"></td><td><form enctype="multipart/form-data" method="post" action="uploadImage"> <input type="file" id="file" name="file" multiple/><br/> <input type="submit" class="btn btn-info" value="上传图片"/> </form></td><td></td> <td>' + date + '</td> <td> <button onclick="deleteThreeRow (this)" class="btn btn-danger">删除</button> </td></tr>';
                    //当前行之后插入一行
                    currentRow.after(str);
                }
            }
        });
    }

    function deleteThreeRow(obj) {
        $(obj).parents("tr").remove();
    }

    function deleteTwo(obj) {
        var newOBJ = obj + '_';
        $('table tr[class*=' + newOBJ + ']').remove();
    }


    $(function () {
        $(".add").click(function () {
            if ($('table tr[class*=0_]').find('input').val() == "") {
                layer.msg('请添加一级分类');
            } else {
                count++;
                var now = new Date();
                var date = now.getFullYear() + '-' + now.getMonth() + '-' + now.getDate();
                var cla = count + '_' + " " + 'cateGory';
                var claBTN = count + '_btn';
                $(".xyz").before('<tr class="' + cla + '"><td><img style="margin-left: 20px" src="/images/jiao.svg" alt="">&nbsp;<input type="text">&nbsp;<img class="' + cla + '" src="/images/arrow.svg" alt="">&nbsp; <button onclick="add(' + count + ')" class="btn btn-info add ' + cla + '">添加三级子类</button> </td><td>  <form enctype="multipart/form-data" method="post" action="uploadImage"> <input type="file" id="file" name="file" multiple/><br/> <input type="submit" class="btn btn-info" value="上传图片"/> </form></td><td> </td> <td>' + date + '</td> <td> <button onclick="deleteTwo(' + count + ')" class="btn btn-danger ' + cla + '">删除</button> </td> </tr><tr class="' + claBTN + '"></tr>');
            }
        });
    });

    function translate() {
        var q = 'apple';
        var appid = '20161026000030775';
        var secret = 'qPUbqa6ID_bzGtTyGIVt';
        var salt = new Date().getTime() / 1000;
        var param = {
            q: q,
            from: 'en',
            to: 'zh',
            appid: appid,
            salt: salt,
            sign: md5(appid + q + salt + secret)
        }

        $.ajax({
            url: 'https://api.fanyi.baidu.com/api/trans/vip/translate',
            type: 'POST',
            data: param,
            dataType: "json",
            success: function (result) {
                console.log(result);
                console.log(result.trans_result[0].dist);
            }, error: function (err) {
                console.error(err)
            }
        })
    }

    translate();

</script>