<!--main-register star-->
<div class="main-register">
    <!--form star-->
    <form id="login_frm" method="post" action="doadminlogin">
        <div class="form">
            <div class="form-ctn">

                <h2>后台登录</h2>
                <input id="Name1" name="name" type="text" placeholder=""/>
                <input id="Moblie1" name="password" type="password" placeholder=""/>
                <label><input type="checkbox" id="Agree1" checked="checked"
